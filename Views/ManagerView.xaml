<Window x:Class="TaxiWPF.Views.ManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Панель Менеджера" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#FDF4CD" CornerRadius="10" BorderBrush="#E0CA8A" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="TAXIWPF - ПАНЕЛЬ МЕНЕДЖЕРА" Foreground="#A8986B" FontWeight="Bold" FontSize="12" Margin="15,10" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button Command="{Binding RefreshTicketsCommand}" Content="Обновить список" Style="{StaticResource PrimaryButton}" Height="30" Margin="0,0,10,0"/>
                <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButton}"/>
            </StackPanel>

            <Border Grid.Row="1" Background="White" Margin="2,0,2,2" CornerRadius="0,0,10,10">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Активные обращения в поддержку" FontSize="22" FontWeight="Bold" Margin="5,0,0,15"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding OpenTickets}" SelectedItem="{Binding SelectedTicket}"
                             Style="{StaticResource OrdersListBox}" ItemContainerStyle="{StaticResource OrderCard}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding Subject}" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Foreground="Gray" Margin="0,2,0,0">
                                            <Run Text="От:"/>
                                            <Run Text="{Binding UserInfo.full_name}"/>
                                            <Run Text="("/>
                                            <Run Text="{Binding UserInfo.username}"/>
                                            <Run Text=")"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding LastUpdated, StringFormat='dd.MM.yyyy HH:mm'}"
                                               Foreground="Gray" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" Content="Открыть выбранный чат" Command="{Binding OpenChatCommand}"
                            Style="{StaticResource AcceptButton}" Margin="0,15,0,0"
                            IsEnabled="{Binding SelectedTicket, Converter={StaticResource StringToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>