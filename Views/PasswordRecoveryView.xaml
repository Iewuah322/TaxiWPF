<Window x:Class="TaxiWPF.Views.PasswordRecoveryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TaxiWPF.ViewModels"
        Title="Восстановление пароля" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" MinWidth="900" MinHeight="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:PasswordRecoveryViewModel/>
    </Window.DataContext>

    <Border Background="#F0EEE9" CornerRadius="10" BorderBrush="#8D837C" BorderThickness="1">
        <Grid>
            <!-- Кнопка закрытия -->
            <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Panel.ZIndex="100"/>

            <!-- Логотип/Название вверху -->
            <TextBlock Text="🚕 TAXIWPF" 
                       Foreground="#8D837C" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="25,20,0,0" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

            <!-- Центральная панель -->
            <Grid Margin="0,60,0,60" VerticalAlignment="Center">
                <Border Background="#FFFFFF" 
                        Opacity="0.98"
                        CornerRadius="25" 
                        Padding="0"
                        MaxWidth="700"
                        MinWidth="600"
                        HorizontalAlignment="Center"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="8" Opacity="0.25" Color="Black"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="25,25,0,0" Padding="40,30">
                            <TextBlock Text="🔓 Сброс пароля" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#333333"/>
                        </Border>

                        <!-- Форма восстановления -->
                        <StackPanel Grid.Row="1" Margin="40,35,40,40">
                            <!-- Ввод Email -->
                            <StackPanel Visibility="{Binding IsEmailEntryVisible, Converter={StaticResource BoolToVis}}" Margin="0,0,0,0">
                                <TextBlock Text="Введите ваш Email" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,30">
                                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                    <TextBlock Text="✉️" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                </Grid>
                                <Button Content="📧 ОТПРАВИТЬ КОД" 
                                        Command="{Binding RequestTokenCommand}" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Padding="30,18"
                                        FontSize="18"/>
                            </StackPanel>

                            <!-- Ввод кода и нового пароля -->
                            <StackPanel Visibility="{Binding IsTokenEntryVisible, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Код из письма" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,20">
                                    <TextBox Text="{Binding Token, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                    <TextBlock Text="🔢" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                </Grid>

                                <TextBlock Text="Новый пароль" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,30">
                                    <PasswordBox Name="PasswordBox" Style="{StaticResource PasswordField}"/>
                                    <TextBlock Text="🔑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                </Grid>

                                <Button Content="✅ УСТАНОВИТЬ НОВЫЙ ПАРОЛЬ" 
                                        Command="{Binding ResetPasswordCommand}" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Padding="30,18"
                                        FontSize="18"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
