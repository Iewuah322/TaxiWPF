<Window x:Class="TaxiWPF.Views.NewSupportTicketView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обращение в поддержку" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#F0EEE9" CornerRadius="15" BorderBrush="#8D837C" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.3" Color="Black"/>
        </Border.Effect>
        <Grid>
            <!-- Кнопка закрытия -->
            <Button Content="✕" IsCancel="True" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Panel.ZIndex="100"/>

            <!-- Контент -->
            <Border Background="#FFFFFF" 
                    CornerRadius="15" 
                    Margin="20"
                    Padding="0"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="15,15,0,0" Padding="25,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💬" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Новое обращение" 
                                           FontSize="22" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Опишите вашу проблему, и мы постараемся помочь" 
                                       FontSize="14" 
                                       Foreground="#888888" 
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Поле ввода -->
                    <Border Grid.Row="1" Margin="25,20,25,15">
                        <Border Background="#FAFAFA" 
                                CornerRadius="12" 
                                Padding="15"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1">
                            <TextBox x:Name="SubjectTextBox" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     Foreground="#333333"
                                     VerticalContentAlignment="Top">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="#333333"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                    </Border>

                    <!-- Кнопки -->
                    <Border Grid.Row="2" Padding="25,15,25,25">
                        <Grid>
                            <Button Content="Отмена" 
                                    IsCancel="True" 
                                    HorizontalAlignment="Left"
                                    Padding="25,12"
                                    FontSize="14"
                                    Background="#F5F5F5"
                                    Foreground="#666666"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="10"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E8E8E8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="📤 Создать обращение" 
                                    IsDefault="True" 
                                    Click="CreateButton_Click" 
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="25,12"
                                    FontSize="14"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
