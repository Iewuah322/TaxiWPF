<Window x:Class="TaxiWPF.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TaxiWPF.ViewModels"
        xmlns:converters="clr-namespace:TaxiWPF.Converters"
        Title="Регистрация" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:RegistrationViewModel/>
    </Window.DataContext>

    <Border Background="#FDF4CD" CornerRadius="10" BorderBrush="#E0CA8A" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="TAXIWPF" Foreground="#A8986B" FontWeight="Bold" FontSize="12" Margin="15,10" VerticalAlignment="Center"/>
            <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <ScrollViewer Grid.Row="1">
                <Border Background="#FFFFFF" Margin="2,0,2,2" CornerRadius="0,0,10,10">
                    <StackPanel Margin="40,20">
                        <TextBlock Text="Создание аккаунта" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333333"/>

                        <TextBlock Text="Имя пользователя" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                            <TextBlock Text="👤" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                        </Grid>

                        <TextBlock Text="Полное имя (ФИО)" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                            <TextBlock Text="🧑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                        </Grid>

                        <TextBlock Text="Email" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                            <TextBlock Text="✉️" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                        </Grid>

                        <TextBlock Text="Пароль" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <PasswordBox Name="PasswordBox" Style="{StaticResource PasswordField}"/>
                            <TextBlock Text="🔑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                            <TextBlock Text="Ваше фото" Style="{StaticResource InputLabel}" Margin="0"/>
                            <TextBlock Text=" (необязательно)" Foreground="Gray" FontSize="12" VerticalAlignment="Center"
                                       Visibility="{Binding IsDriverRegistration, Converter={StaticResource InverseBoolToVis}}"/>
                        </StackPanel>
                        <Border Style="{StaticResource ImagePreviewStyle}" Visibility="{Binding ProfilePhotoPath, Converter={StaticResource StringToVisibilityConverter}}">
                            <Image Source="{Binding ProfilePhotoPath, Converter={StaticResource PathToImageConverter}}" Stretch="Uniform"/>
                        </Border>
                        <Button Command="{Binding SelectProfilePhotoCommand}" Style="{StaticResource PrimaryButton}" Margin="0,5,0,0">
                            <Button.Content>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Выбрать фото..."/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ProfilePhotoPath, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible">
                                                    <Setter Property="Text" Value="Изменить фото..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button.Content>
                        </Button>

                        <StackPanel Visibility="{Binding IsDriverRegistration, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Фото прав" Style="{StaticResource InputLabel}"/>
                            <Border Style="{StaticResource ImagePreviewStyle}" Visibility="{Binding LicensePhotoPath, Converter={StaticResource StringToVisibilityConverter}}">
                                <Image Source="{Binding LicensePhotoPath, Converter={StaticResource PathToImageConverter}}" Stretch="Uniform"/>
                            </Border>
                            <Button Command="{Binding SelectLicensePhotoCommand}" Style="{StaticResource PrimaryButton}" Margin="0,5,0,0">
                                <Button.Content>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Выбрать фото прав..."/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LicensePhotoPath, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible">
                                                        <Setter Property="Text" Value="Изменить фото прав..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ" Command="{Binding RegisterCommand}" Style="{StaticResource PrimaryButton}" Margin="0,30,0,0"/>

                        <Button Command="{Binding ToggleRegistrationModeCommand}" 
                                Margin="0,15,0,0" HorizontalAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource CustomHyperlinkButton}">
                                    <Setter Property="Content" Value="Хотите стать водителем?"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDriverRegistration}" Value="True">
                                            <Setter Property="Content" Value="Зарегистрироваться как клиент" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>