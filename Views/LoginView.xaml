<Window x:Class="TaxiWPF.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TaxiWPF.ViewModels"
        Title="Вход в систему" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" MinWidth="900" MinHeight="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        x:Name="LoginWindow">
    
    <Window.RenderTransform>
        <RotateTransform CenterX="640" CenterY="360"/>
    </Window.RenderTransform>

    <Window.DataContext>
        <vm:AuthViewModel/>
    </Window.DataContext>
    
    <Border x:Name="RootBorder" Background="#F0EEE9" CornerRadius="10" BorderBrush="#8D837C" BorderThickness="1">
        <Border.RenderTransform>
            <RotateTransform x:Name="Rotation" CenterX="640" CenterY="360"/>
        </Border.RenderTransform>

        <Grid>
            <!-- Кнопка закрытия -->
            <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Panel.ZIndex="100"/>

            <!-- Логотип/Название вверху -->
            <TextBlock Text="🚕 TAXIWPF" 
                       Foreground="#8D837C" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="25,20,0,0" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

            <!-- Центральная панель -->
            <Grid Margin="0,60,0,60" VerticalAlignment="Center">
                <Border Background="#FFFFFF" 
                        Opacity="0.98"
                        CornerRadius="25" 
                        Padding="0"
                        MaxWidth="700"
                        MinWidth="600"
                        HorizontalAlignment="Center"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="8" Opacity="0.25" Color="Black"/>
                    </Border.Effect>
                    
                    <ContentControl x:Name="AuthContent" Content="{Binding CurrentView}">
                        <ContentControl.Resources>
                            <!-- Login View Template -->
                            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Заголовок -->
                                    <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="25,25,0,0" Padding="40,30">
                                        <TextBlock Text="🔐 Авторизация" 
                                                   FontSize="28" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#333333"/>
                                    </Border>

                                    <!-- Форма входа -->
                                    <StackPanel Grid.Row="1" Margin="40,35,40,40">
                                        <TextBlock Text="Имя пользователя" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                        <Grid Margin="0,0,0,20">
                                            <TextBox Name="UsernameTextBox" 
                                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource InputField}"/>
                                            <TextBlock Text="👤" 
                                                       IsHitTestVisible="False" 
                                                       Style="{StaticResource InputFieldIcon}"/>
                                        </Grid>

                                        <TextBlock Text="Пароль" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                        <Grid Margin="0,0,0,30">
                                            <PasswordBox Name="PasswordBox" Style="{StaticResource PasswordField}"/>
                                            <TextBlock Text="🔑" 
                                                       IsHitTestVisible="False" 
                                                       Style="{StaticResource InputFieldIcon}"/>
                                        </Grid>

                                        <Button Content="🚗 ВОЙТИ"
                                                Click="LoginButton_Click"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="30,18"
                                                FontSize="18"
                                                Margin="0,0,0,25"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                                            <Button Command="{Binding GoToRegisterCommand}" 
                                                    Style="{StaticResource CustomHyperlinkButton}" 
                                                    Padding="0"
                                                    Content="Регистрация"
                                                    FontSize="14"/>
                                            <TextBlock Text="|" 
                                                       VerticalAlignment="Center" 
                                                       Margin="15,0" 
                                                       Foreground="#CCCCCC"
                                                       FontSize="14"/>
                                            <Button Command="{Binding GoToRecoveryCommand}" 
                                                    Style="{StaticResource CustomHyperlinkButton}" 
                                                    Padding="0"
                                                    Content="Забыли пароль?"
                                                    FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                            <TextBlock Text="🎭" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="16"/>
                                            <ToggleButton x:Name="CrazyModeToggle" Style="{StaticResource CrazyModeToggleStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                            
                            <!-- Registration View Template -->
                            <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Заголовок -->
                                    <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="25,25,0,0" Padding="40,30">
                                        <Grid>
                                            <Button Content="← Назад" 
                                                    Command="{Binding GoToLoginCommand}" 
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center"
                                                    Padding="15,10"
                                                    FontSize="14"
                                                    Background="#F0F0F0"
                                                    Foreground="#333333"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="10"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#E0E0E0"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <TextBlock Text="📝 Создание аккаунта" 
                                                       FontSize="28" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="#333333"/>
                                        </Grid>
                                    </Border>

                                    <!-- Форма регистрации -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="40,35,40,40">
                                        <StackPanel>
                                            <TextBlock Text="Имя пользователя" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,20">
                                                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                <TextBlock Text="👤" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <TextBlock Text="Полное имя (ФИО)" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,20">
                                                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                <TextBlock Text="🧑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <TextBlock Text="Email" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,20">
                                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                <TextBlock Text="✉️" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <TextBlock Text="Пароль" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,20">
                                                <PasswordBox Name="RegPasswordBox" Style="{StaticResource PasswordField}"/>
                                                <TextBlock Text="🔑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <TextBlock Text="Подтвердите пароль" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,25">
                                                <PasswordBox Name="RegConfirmPasswordBox" Style="{StaticResource PasswordField}"/>
                                                <TextBlock Text="🔑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <!-- Фото профиля -->
                                            <Border Background="#FAFAFA" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <TextBlock Text="📷 Ваше фото" Style="{StaticResource InputLabel}" Margin="0"/>
                                                        <TextBlock Text=" (необязательно)" 
                                                                   Foreground="#888888" 
                                                                   FontSize="12" 
                                                                   VerticalAlignment="Center"
                                                                   Margin="5,0,0,0"
                                                                   Visibility="{Binding IsDriverRegistration, Converter={StaticResource InverseBoolToVis}}"/>
                                                    </StackPanel>
                                                    <Border Style="{StaticResource ImagePreviewStyle}" 
                                                            Visibility="{Binding ProfilePhotoPath, Converter={StaticResource StringToVisibilityConverter}}"
                                                            Margin="0,0,0,10">
                                                        <Image Source="{Binding ProfilePhotoPath, Converter={StaticResource PathToImageConverter}}" Stretch="Uniform"/>
                                                    </Border>
                                                    <Button Command="{Binding SelectProfilePhotoCommand}" 
                                                            Style="{StaticResource PrimaryButton}" 
                                                            Padding="15,10"
                                                            FontSize="14">
                                                        <Button.Content>
                                                            <TextBlock>
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="📤 Выбрать фото..."/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ProfilePhotoPath, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible">
                                                                        <Setter Property="Text" Value="🔄 Изменить фото..."/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>
                                            </Border>

                                            <!-- Фото прав (только для водителя) -->
                                            <StackPanel Visibility="{Binding IsDriverRegistration, Converter={StaticResource BoolToVis}}" Margin="0,0,0,25">
                                                <Border Background="#FFF8E1" CornerRadius="12" Padding="15">
                                                    <StackPanel>
                                                        <TextBlock Text="🪪 Фото прав" Style="{StaticResource InputLabel}" Margin="0,0,0,10"/>
                                                        <Border Style="{StaticResource ImagePreviewStyle}" 
                                                                Visibility="{Binding LicensePhotoPath, Converter={StaticResource StringToVisibilityConverter}}"
                                                                Margin="0,0,0,10">
                                                            <Image Source="{Binding LicensePhotoPath, Converter={StaticResource PathToImageConverter}}" Stretch="Uniform"/>
                                                        </Border>
                                                        <Button Command="{Binding SelectLicensePhotoCommand}" 
                                                                Style="{StaticResource PrimaryButton}" 
                                                                Padding="15,10"
                                                                FontSize="14">
                                                            <Button.Content>
                                                                <TextBlock>
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Text" Value="📤 Выбрать фото прав..."/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding LicensePhotoPath, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible">
                                                                                    <Setter Property="Text" Value="🔄 Изменить фото прав..."/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Button.Content>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <Button Content="✅ ЗАРЕГИСТРИРОВАТЬСЯ" 
                                                    Command="{Binding RegisterCommand}" 
                                                    Style="{StaticResource PrimaryButton}" 
                                                    Padding="30,18"
                                                    FontSize="18"
                                                    Margin="0,0,0,20"/>

                                            <Button Command="{Binding ToggleRegistrationModeCommand}" 
                                                    Margin="0,10,0,0" 
                                                    HorizontalAlignment="Center"
                                                    Padding="20,12"
                                                    FontSize="14"
                                                    Background="#E3F2FD"
                                                    Foreground="#1976D2"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="10"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#1976D2"/>
                                                                            <Setter Property="Foreground" Value="White"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                                <Button.Content>
                                                    <TextBlock>
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="🚗 Хотите стать водителем?"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDriverRegistration}" Value="True">
                                                                        <Setter Property="Text" Value="👤 Зарегистрироваться как клиент"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </DataTemplate>
                            
                            <!-- Password Recovery View Template -->
                            <DataTemplate DataType="{x:Type vm:PasswordRecoveryViewModel}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Заголовок -->
                                    <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="25,25,0,0" Padding="40,30">
                                        <Grid>
                                            <Button Content="← Назад" 
                                                    Command="{Binding GoToLoginCommand}" 
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center"
                                                    Padding="15,10"
                                                    FontSize="14"
                                                    Background="#F0F0F0"
                                                    Foreground="#333333"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="10"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#E0E0E0"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <TextBlock Text="🔓 Сброс пароля" 
                                                       FontSize="28" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="#333333"/>
                                        </Grid>
                                    </Border>

                                    <!-- Форма восстановления -->
                                    <StackPanel Grid.Row="1" Margin="40,35,40,40">
                                        <!-- Ввод Email -->
                                        <StackPanel Visibility="{Binding IsEmailEntryVisible, Converter={StaticResource BoolToVis}}" Margin="0,0,0,0">
                                            <TextBlock Text="Введите ваш Email" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,30">
                                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                <TextBlock Text="✉️" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>
                                            <Button Content="📧 ОТПРАВИТЬ КОД" 
                                                    Command="{Binding RequestTokenCommand}" 
                                                    Style="{StaticResource PrimaryButton}" 
                                                    Padding="30,18"
                                                    FontSize="18"/>
                                        </StackPanel>

                                        <!-- Ввод кода и нового пароля -->
                                        <StackPanel Visibility="{Binding IsTokenEntryVisible, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="Код из письма" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,20">
                                                <TextBox Text="{Binding Token, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                <TextBlock Text="🔢" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <TextBlock Text="Новый пароль" Style="{StaticResource InputLabel}" Margin="0,0,0,8"/>
                                            <Grid Margin="0,0,0,30">
                                                <PasswordBox Name="RecoveryPasswordBox" Style="{StaticResource PasswordField}"/>
                                                <TextBlock Text="🔑" IsHitTestVisible="False" Style="{StaticResource InputFieldIcon}"/>
                                            </Grid>

                                            <Button Content="✅ УСТАНОВИТЬ НОВЫЙ ПАРОЛЬ" 
                                                    Command="{Binding ResetPasswordCommand}" 
                                                    Style="{StaticResource PrimaryButton}" 
                                                    Padding="30,18"
                                                    FontSize="18"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
