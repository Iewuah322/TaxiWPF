<Window x:Class="TaxiWPF.Views.ClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TaxiWPF.ViewModels"
        xmlns:converters="clr-namespace:TaxiWPF.Converters"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Заказ такси" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" MinWidth="1280" MinHeight="720"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#F0EEE9" CornerRadius="10" BorderBrush="#8D837C" BorderThickness="1">
        <Grid>
            <Button Command="{Binding ToggleProfilePanelCommand}" Style="{StaticResource AvatarButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0">
                <Grid Width="30" Height="30">
                    <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding CurrentUser.DriverPhotoUrl, Converter={StaticResource PathToImageConverter}}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </Button>
            <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>

            <!-- Карта по центру с отступами (70% ширины) -->
            <Grid Margin="100,35,100,100">
                <Border CornerRadius="8" Background="Transparent">
                    <gmaps:GMapControl x:Name="MainMap" MouseLeftButtonDown="MainMap_MouseLeftButtonDown" 
                                       Zoom="12" MaxZoom="18" MinZoom="5" 
                                       MouseWheelZoomType="MousePositionWithoutCenter" CanDragMap="True" />
                </Border>
                
                <!-- Плавающая панель выбора точек на карте -->
                <Border Background="#FDFBF6" 
                        Opacity="0.95" 
                        CornerRadius="20" 
                        Padding="15,8" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,20"
                        Visibility="{Binding CurrentBookingStep, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=AddressInput;TariffSelection}">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="RbPointA" Content="Указать точку А" IsChecked="True" Style="{StaticResource MapRadioButton}"/>
                        <RadioButton x:Name="RbPointB" Content="Указать точку Б" Margin="15,0,0,0" Style="{StaticResource MapRadioButton}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Кнопка "Заказать такси" внизу по центру -->
            <Button Content="ЗАКАЗАТЬ ТАКСИ" 
                    Command="{Binding StartBookingCommand}"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,30"
                    Padding="40,15"
                    FontSize="18"
                    Visibility="{Binding CurrentBookingStep, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Idle}"/>

            <!-- Старая панель заказа (скрыта для нового интерфейса) -->
            <Grid Margin="0,35,0,0" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="Transparent" Margin="15" CornerRadius="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <StackPanel x:Name="OrderPanel" Margin="25">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProfilePanelVisible}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsRatingVisible}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Заказать такси" FontSize="26" FontWeight="Bold" Margin="0,0,0,25" Foreground="#4F4A45"/>

                                <StackPanel x:Name="InputFieldsPanel" Visibility="{Binding IsInputMode, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="Откуда:" Style="{StaticResource InputLabel}"/>
                                    <TextBox Text="{Binding FromAddress, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Margin="0,0,0,15">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="LostFocus">
                                                <i:InvokeCommandAction Command="{Binding UpdatePointACommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <TextBlock Text="Куда:" Style="{StaticResource InputLabel}"/>
                                    <TextBox Text="{Binding ToAddress, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Margin="0,0,0,15">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="LostFocus">
                                                <i:InvokeCommandAction Command="{Binding UpdatePointBCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <TextBlock Text="Тариф:" Style="{StaticResource InputLabel}"/>
                                    <ComboBox ItemsSource="{Binding Tariffs}" SelectedItem="{Binding SelectedTariff}" Margin="0,0,0,25" Style="{StaticResource CustomComboBox}"/>
                                    <TextBlock Text="Способ оплаты:" Style="{StaticResource InputLabel}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <RadioButton Content="💳 Карта" GroupName="Payment" IsChecked="{Binding IsCardPayment}"/>
                                        <RadioButton Content="💵 Наличные" GroupName="Payment" IsChecked="{Binding IsCashPayment}" Margin="15,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding IsCardPayment, Converter={StaticResource BoolToVis}}">
                                        <ComboBox ItemsSource="{Binding SavedCards}" 
              SelectedItem="{Binding SelectedSavedCard}"
              DisplayMemberPath="MaskedName"
              Style="{StaticResource CustomComboBox}" Margin="0,5,0,10"/>

                                        <StackPanel Visibility="{Binding IsNewCardSelected, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="Номер карты" Style="{StaticResource InputLabel}" Margin="0"/>
                                            <TextBox Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                    <TextBlock Text="Срок (MM/YY)" Style="{StaticResource InputLabel}"/>
                                                    <TextBox Text="{Binding CardExpiry, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                    <TextBlock Text="CVV" Style="{StaticResource InputLabel}"/>
                                                    <TextBox Text="{Binding CardCVV, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                                </StackPanel>
                                            </Grid>
                                            <CheckBox Content="Запомнить карту" IsChecked="{Binding RememberCard}" Margin="0,15,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel x:Name="OrderSummaryPanel" Margin="0,0,0,15" Visibility="{Binding IsOrderSummaryVisible, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Style="{StaticResource InputLabel}">Откуда:</TextBlock>
                                    <TextBlock Text="{Binding CurrentOrder.PointA}" Margin="0,0,0,10" Foreground="#333" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Style="{StaticResource InputLabel}">Куда:</TextBlock>
                                    <TextBlock Text="{Binding CurrentOrder.PointB}" Margin="0,0,0,10" Foreground="#333" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Style="{StaticResource InputLabel}">Тариф:</TextBlock>
                                    <TextBlock Text="{Binding CurrentOrder.Tariff}" Margin="0,0,0,10" Foreground="#333" FontSize="14"/>
                                    <TextBlock Style="{StaticResource InputLabel}">Стоимость:</TextBlock>
                                    <TextBlock Text="{Binding CurrentOrder.TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontWeight="Bold" Foreground="#FFC107" FontSize="18"/>
                                </StackPanel>

                                <Border Background="#FDFBF6" CornerRadius="4" Padding="15" Margin="0,0,0,25" Visibility="{Binding IsInputMode, Converter={StaticResource BoolToVis}}">
                                    <StackPanel>
                                        <TextBlock Text="Примерная стоимость:" FontSize="14" Foreground="#8D837C"/>
                                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontSize="32" FontWeight="Bold" Foreground="#FFC107" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding DistanceKm, StringFormat={}Расстояние: {0:F2} км}" FontSize="12" Foreground="#8D837C" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#FFF9E0" CornerRadius="4" Padding="15" Margin="0,0,0,15" Visibility="{Binding CurrentOrderState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=DriverEnRoute;DriverArrived;TripInProgress}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30" Margin="0,0,10,0" Background="#EEE">
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding CurrentOrder.AssignedDriver.DriverPhotoUrl, FallbackValue='https://via.placeholder.com/100/CCCCCC/808080?text=Driver', Converter={StaticResource PathToImageConverter}}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DriverInfoText}" FontSize="14" Foreground="#A8986B" TextWrapping="Wrap"/>
                                            <TextBlock FontSize="12" Foreground="#555" Margin="0,2,0,0">
                                                <Run Text="{Binding CurrentOrder.AssignedDriver.car_model}"/>
                                                <LineBreak/> (<Run Text="{Binding CurrentOrder.AssignedDriver.license_plate}"/>)
                                            </TextBlock>
                                        </StackPanel>
                                        <Border Grid.Column="2" Width="80" Height="60" CornerRadius="5" Margin="10,0,0,0" Background="#EEE">
                                            <Image Source="{Binding CurrentOrder.AssignedDriver.CarPhotoUrl, FallbackValue='https://via.placeholder.com/150/CCCCCC/808080?text=Car', Converter={StaticResource PathToImageConverter}}" Stretch="UniformToFill"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <Button Content="НАЙТИ ВОДИТЕЛЯ" Command="{Binding FindTaxiCommand}" Style="{StaticResource PrimaryButton}" Visibility="{Binding CanRequestNewOrder, Converter={StaticResource BoolToVis}}" IsEnabled="{Binding CanRequestNewOrder}"/>
                                <Button Content="ОТМЕНИТЬ ПОИСК" Command="{Binding CancelSearchCommand}" Style="{StaticResource DeclineButton}" Margin="0,10,0,0" Visibility="{Binding IsSearchingState, Converter={StaticResource BoolToVis}}"/>

                                <TextBlock Text="{Binding StatusMessage}" Foreground="#555" Margin="0,10,0,0" TextWrapping="Wrap" HorizontalAlignment="Center" Visibility="{Binding CurrentOrderState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=!Idle}"/>
                            </StackPanel>

                            <StackPanel x:Name="RatingPanel" Margin="25" HorizontalAlignment="Center" Visibility="{Binding IsRatingVisible, Converter={StaticResource BoolToVis}}">
                                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20" BorderBrush="#DDCAB4" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Детали поездки:" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap"><Run Text="От:" Foreground="#888"/> <Run Text="{Binding CurrentOrder.PointA}"/></TextBlock>
                                        <TextBlock TextWrapping="Wrap"><Run Text="До:" Foreground="#888"/> <Run Text="{Binding CurrentOrder.PointB}"/></TextBlock>
                                        <TextBlock><Run Text="Водитель:" Foreground="#888"/> <Run Text="{Binding CurrentOrder.AssignedDriver.full_name}"/></TextBlock>
                                        <TextBlock Margin="0,5,0,0"><Run Text="Стоимость:" Foreground="#888"/> <Run Text="{Binding CurrentOrder.TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontWeight="Bold"/></TextBlock>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Оцените поездку:" Style="{StaticResource InputLabel}" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                    <RadioButton GroupName="Rating" Tag="1" Content="★" FontSize="30" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                                    <RadioButton GroupName="Rating" Tag="2" Content="★" FontSize="30" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                                    <RadioButton GroupName="Rating" Tag="3" Content="★" FontSize="30" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                                    <RadioButton GroupName="Rating" Tag="4" Content="★" FontSize="30" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                                    <RadioButton GroupName="Rating" Tag="5" Content="★" FontSize="30" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                                </StackPanel>
                                <TextBlock Text="Дополнительно:" Style="{StaticResource InputLabel}" Margin="0,15,0,5" HorizontalAlignment="Center"/>
                                <WrapPanel HorizontalAlignment="Center">
                                    <ToggleButton Content="👍 Вежливость" IsChecked="{Binding WasPolite}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                                    <ToggleButton Content="✨ Чистота" IsChecked="{Binding WasClean}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                                    <ToggleButton Content="🚗 Вождение" IsChecked="{Binding GoodDriving}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                                </WrapPanel>
                                <Button Content="ОТПРАВИТЬ ОЦЕНКУ" Command="{Binding RateDriverCommand}" Style="{StaticResource PrimaryButton}" Margin="0,15,0,0"/>
                                <Button Content="Пропустить" Command="{Binding SkipRatingCommand}"
                                        Margin="0,10,0,0" Height="35" Background="#E0DCD5"
                                        BorderThickness="0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#D0C9BF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Старая карта (скрыта) -->
                <Grid Grid.Column="1" Margin="0,15,15,15" Visibility="Collapsed">
                    <Border CornerRadius="8" Background="Transparent">
                        <gmaps:GMapControl MouseLeftButtonDown="MainMap_MouseLeftButtonDown" Zoom="12" MaxZoom="18" MinZoom="5" MouseWheelZoomType="MousePositionWithoutCenter" CanDragMap="True" />
                    </Border>
                    <!-- Старая панель выбора точек (скрыта, дубликат) -->
                    <Border Background="#FDFBF6" Opacity="0.9" CornerRadius="20" Padding="15,8" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Указать точку А" IsChecked="True" Style="{StaticResource MapRadioButton}"/>
                            <RadioButton Content="Указать точку Б" Margin="15,0,0,0" Style="{StaticResource MapRadioButton}"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>

            <!-- Плавающая панель для ввода адресов (снизу, частично видимая) -->
            <Border x:Name="AddressInputPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20,20,0,0" 
                    Padding="30,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="600"
                    Height="400"
                    Visibility="{Binding IsAddressInputVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2,2,2,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="AddressPanelTransform" Y="340"/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Видимая часть при свернутом состоянии -->
                    <Border Grid.Row="0" Background="Transparent" 
                            MouseLeftButtonDown="ExpandAddressPanel_Click"
                            Cursor="Hand"
                            VerticalAlignment="Top"
                            Height="60">
                        <Grid>
                            <TextBlock Text="Введите адреса" FontSize="18" FontWeight="Bold" 
                                       VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#333333"/>
                            <Button x:Name="AddressCollapseButton" Content="▼" Click="CollapseAddressPanel_Click" 
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Right"
                                    Height="60"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#333333"
                                    FontSize="20"
                                    Cursor="Hand"
                                    Padding="0,0,20,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Содержимое панели -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Откуда:" Style="{StaticResource InputLabel}" Foreground="#333333"/>
                        <TextBox Text="{Binding FromAddress, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputField}" 
                                 Margin="0,0,0,15"
                                 Background="White">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding UpdatePointACommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                        <TextBlock Text="Куда:" Style="{StaticResource InputLabel}" Foreground="#333333"/>
                        <TextBox Text="{Binding ToAddress, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputField}"
                                 Background="White">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding UpdatePointBCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Плавающая панель выбора тарифа (снизу, частично видимая) -->
            <Border x:Name="TariffSelectionPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20,20,0,0" 
                    Padding="30,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="600"
                    Height="500"
                    Visibility="{Binding IsTariffSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2,2,2,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="TariffPanelTransform" Y="440"/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Видимая часть при свернутом состоянии -->
                    <Border Grid.Row="0" Background="Transparent" 
                            MouseLeftButtonDown="ExpandTariffPanel_Click"
                            Cursor="Hand"
                            VerticalAlignment="Top"
                            Height="60">
                        <Grid>
                            <TextBlock Text="Выберите тариф" FontSize="18" FontWeight="Bold" 
                                       VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#333333"/>
                            <Button x:Name="TariffCollapseButton" Content="▼" Click="CollapseTariffPanel_Click" 
                                    HorizontalAlignment="Right" 
                                    Width="40" Height="40"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#333333"
                                    FontSize="20"
                                    Cursor="Hand"
                                    Margin="0,0,15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Содержимое панели -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                        <StackPanel>
                            <!-- Группированные адреса -->
                            <Border Margin="0,0,0,20" Background="#F5F5F5" Padding="15" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="Откуда:" Style="{StaticResource InputLabel}" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding FromAddress}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#333" TextWrapping="Wrap"/>
                                    <TextBlock Text="Куда:" Style="{StaticResource InputLabel}" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding ToAddress}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,0" Foreground="#333" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Кнопки тарифов -->
                            <Grid Margin="0,10,0,0" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Эконом -->
                                <Button Grid.Column="0" 
                                        Command="{Binding SelectTariffCommand}" 
                                        CommandParameter="Эконом"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="170"
                                        Height="260"
                                        Margin="0,0,10,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="White" 
                                                                CornerRadius="15"
                                                                BorderBrush="#E0E0E0"
                                                                BorderThickness="1">
                                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#FFC107"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="160"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Background="#FFC107" CornerRadius="15,15,0,0">
                                            <Image Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100">
                                                <Image.Source>
                                                    <Binding Converter="{StaticResource PathToImageConverter}" ConverterParameter="Assets/Эконом.png"/>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                        <Border Grid.Row="1" Background="White" CornerRadius="0,0,15,15" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="Эконом" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="#333"/>
                                                <TextBlock Text="{Binding EconomyPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontSize="20" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Button>

                                <!-- Комфорт -->
                                <Button Grid.Column="1" 
                                        Command="{Binding SelectTariffCommand}" 
                                        CommandParameter="Комфорт"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="170"
                                        Height="260"
                                        Margin="10,0,10,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="White" 
                                                                CornerRadius="15"
                                                                BorderBrush="#E0E0E0"
                                                                BorderThickness="1">
                                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#FFC107"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="160"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Background="#FFC107" CornerRadius="15,15,0,0">
                                            <Image Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100">
                                                <Image.Source>
                                                    <Binding Converter="{StaticResource PathToImageConverter}" ConverterParameter="Assets/Комфорт.png"/>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                        <Border Grid.Row="1" Background="White" CornerRadius="0,0,15,15" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="Комфорт" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="#333"/>
                                                <TextBlock Text="{Binding ComfortPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontSize="20" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Button>

                                <!-- Бизнес -->
                                <Button Grid.Column="2" 
                                        Command="{Binding SelectTariffCommand}" 
                                        CommandParameter="Бизнес"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="170"
                                        Height="260"
                                        Margin="10,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="White" 
                                                                CornerRadius="15"
                                                                BorderBrush="#E0E0E0"
                                                                BorderThickness="1">
                                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#FFC107"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="160"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Background="#FFC107" CornerRadius="15,15,0,0">
                                            <Image Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100">
                                                <Image.Source>
                                                    <Binding Converter="{StaticResource PathToImageConverter}" ConverterParameter="Assets/Бизнес.png"/>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                        <Border Grid.Row="1" Background="White" CornerRadius="0,0,15,15" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="Бизнес" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="#333"/>
                                                <TextBlock Text="{Binding BusinessPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" FontSize="20" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Плавающая панель выбора оплаты (снизу, частично видимая) -->
            <Border x:Name="PaymentSelectionPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20,20,0,0" 
                    Padding="30,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="600"
                    Height="500"
                    Visibility="{Binding IsPaymentSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2,2,2,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="PaymentPanelTransform" Y="440"/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Видимая часть при свернутом состоянии -->
                    <Border Grid.Row="0" Background="Transparent" 
                            MouseLeftButtonDown="ExpandPaymentPanel_Click"
                            Cursor="Hand"
                            VerticalAlignment="Top"
                            Height="60">
                        <Grid>
                            <TextBlock Text="Способ оплаты" FontSize="18" FontWeight="Bold" 
                                       VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#333333"/>
                            <Button x:Name="PaymentCollapseButton" Content="▼" Click="CollapsePaymentPanel_Click" 
                                    HorizontalAlignment="Right" 
                                    Width="40" Height="40"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#333333"
                                    FontSize="20"
                                    Cursor="Hand"
                                    Margin="0,0,15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Содержимое панели -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel>
                        <!-- Группированные адрес и тариф сверху -->
                        <Border Margin="0,0,0,30" Background="#F5F5F5" Padding="15" CornerRadius="10">
                            <StackPanel>
                                <TextBlock Text="Откуда:" Style="{StaticResource InputLabel}" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{Binding FromAddress}" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,10" Foreground="#333"/>
                                <TextBlock Text="Куда:" Style="{StaticResource InputLabel}" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{Binding ToAddress}" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,10" Foreground="#333"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Image Source="{Binding SelectedTariff, Converter={StaticResource TariffToImageConverter}}" Width="40" Height="40" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding SelectedTariff}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Выбор оплаты -->
                        <TextBlock Text="Способ оплаты:" Style="{StaticResource InputLabel}" FontSize="16" Margin="0,0,0,15" Foreground="#333333"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <RadioButton Content="💳 Карта" GroupName="Payment" IsChecked="{Binding IsCardPayment}" FontSize="16" Margin="0,0,30,0" Foreground="#333"/>
                            <RadioButton Content="💵 Наличные" GroupName="Payment" IsChecked="{Binding IsCashPayment}" FontSize="16" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Visibility="{Binding IsCardPayment, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox ItemsSource="{Binding SavedCards}" 
                                      SelectedItem="{Binding SelectedSavedCard}"
                                      DisplayMemberPath="MaskedName"
                                      Style="{StaticResource CustomComboBox}" 
                                      Margin="0,0,0,10"/>

                            <StackPanel Visibility="{Binding IsNewCardSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Номер карты" Style="{StaticResource InputLabel}" Margin="0"/>
                                <TextBox Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Срок (MM/YY)" Style="{StaticResource InputLabel}"/>
                                        <TextBox Text="{Binding CardExpiry, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="CVV" Style="{StaticResource InputLabel}"/>
                                        <TextBox Text="{Binding CardCVV, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}"/>
                                    </StackPanel>
                                </Grid>
                                <CheckBox Content="Запомнить карту" IsChecked="{Binding RememberCard}" Margin="0,15,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Content="ПОДТВЕРДИТЬ ОПЛАТУ" 
                                Command="{Binding ConfirmPaymentCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
                </Grid>
            </Border>

            <!-- Кнопка "Поиск водителя" с картинкой и надписью -->
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,30"
                        Visibility="{Binding IsSearchDriverButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button x:Name="SearchDriverButton"
                        Click="SearchDriverButton_Click"
                        Width="120"
                        Height="120"
                        Background="Transparent"
                        BorderThickness="0"
                        IsEnabled="{Binding IsSearchDriverButtonEnabled}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="White" 
                                                CornerRadius="15"
                                                BorderBrush="#FFC107"
                                                BorderThickness="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFB300"/>
                                                <Setter Property="BorderThickness" Value="4"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Image Source="{Binding Converter={StaticResource PathToImageConverter}, ConverterParameter='Assets/Поиск водителя.png'}" 
                           Stretch="Uniform" 
                           Width="100" 
                           Height="100"/>
                </Button>
                <TextBlock Text="Найти водителя" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"
                           Foreground="#333333"/>
            </StackPanel>


            <!-- Свернутая панель с информацией о заказе (всегда видима при ReadyToOrder) -->
            <Border x:Name="OrderInfoPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="15" 
                    Padding="20,15"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20,60,0,0"
                    Width="350"
                    Visibility="{Binding IsSearchDriverButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Ваш заказ" FontSize="16" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
                        <Button Content="✏️ Изменить" 
                                Command="{Binding EditOrderCommand}"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#666"
                                FontSize="12"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" Padding="8,4" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Откуда:" Style="{StaticResource InputLabel}" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding FromAddress}" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#333" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Куда:" Style="{StaticResource InputLabel}" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding ToAddress}" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#333" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Image Source="{Binding SelectedTariff, Converter={StaticResource TariffToImageConverter}}" Width="30" Height="30" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding SelectedTariff}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#FF9800"/>
                </StackPanel>
            </Border>

            <!-- Плавающая панель поиска водителя (слева) -->
            <Border x:Name="SearchingPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="380"
                    Margin="20,50,0,0"
                    Visibility="{Binding IsSearchingState, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🔍 Поиск водителя..." FontSize="22" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#666666" TextWrapping="Wrap" Margin="0,0,0,20"/>
                    
                    <Border Background="#F5F5F5" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap">
                                <Run Text="📍 От: " FontWeight="SemiBold"/>
                                <Run Text="{Binding FromAddress}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap" Margin="0,8,0,0">
                                <Run Text="🎯 До: " FontWeight="SemiBold"/>
                                <Run Text="{Binding ToAddress}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" 
                               FontSize="26" FontWeight="Bold" Foreground="#FFC107" HorizontalAlignment="Center" Margin="0,10,0,20"/>
                    
                    <Button Content="ОТМЕНИТЬ ПОИСК" Command="{Binding CancelSearchCommand}" Style="{StaticResource DeclineButton}"/>
                </StackPanel>
            </Border>

            <!-- Плавающая панель информации о водителе (слева) -->
            <Border x:Name="DriverInfoPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="380"
                    Margin="20,50,0,0"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentOrderState}" Value="DriverEnRoute">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentOrderState}" Value="DriverArrived">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentOrderState}" Value="TripInProgress">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                    
                    <!-- Информация о водителе -->
                    <Border Background="#FFF9E0" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Background="#EEE">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding CurrentOrder.AssignedDriver.DriverPhotoUrl, FallbackValue='https://via.placeholder.com/100/CCCCCC/808080?text=Driver', Converter={StaticResource PathToImageConverter}}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentOrder.AssignedDriver.full_name, FallbackValue='Водитель'}" FontSize="16" FontWeight="SemiBold" Foreground="#333333"/>
                                <TextBlock FontSize="13" Foreground="#666666">
                                    <Run Text="{Binding CurrentOrder.AssignedDriver.car_model, FallbackValue=''}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding CurrentOrder.AssignedDriver.license_plate, FallbackValue=''}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Детали поездки -->
                    <Border Background="#F5F5F5" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap">
                                <Run Text="📍 От: " FontWeight="SemiBold"/>
                                <Run Text="{Binding CurrentOrder.PointA}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap" Margin="0,8,0,0">
                                <Run Text="🎯 До: " FontWeight="SemiBold"/>
                                <Run Text="{Binding CurrentOrder.PointB}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="{Binding CurrentOrder.TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" 
                               FontSize="26" FontWeight="Bold" Foreground="#FFC107" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Плавающая панель оценки водителя (слева) -->
            <Border x:Name="RatingDriverPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="380"
                    Margin="20,50,0,0"
                    Visibility="{Binding IsRatingVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🎉 Поездка завершена!" FontSize="22" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,5"/>
                    <TextBlock Text="Оцените водителя" FontSize="16" Foreground="#666666" Margin="0,0,0,20"/>
                    
                    <!-- Информация о поездке -->
                    <Border Background="#F5F5F5" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap">
                                <Run Text="📍 От: "/>
                                <Run Text="{Binding CurrentOrder.PointA}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#666666" TextWrapping="Wrap" Margin="0,5,0,0">
                                <Run Text="🎯 До: "/>
                                <Run Text="{Binding CurrentOrder.PointB}"/>
                            </TextBlock>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#FFC107" Margin="0,10,0,0">
                                <Run Text="Итого: "/>
                                <Run Text="{Binding CurrentOrder.TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Рейтинг звездами -->
                    <TextBlock Text="Ваша оценка:" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <RadioButton GroupName="NewRating" Tag="1" Content="★" FontSize="32" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                        <RadioButton GroupName="NewRating" Tag="2" Content="★" FontSize="32" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                        <RadioButton GroupName="NewRating" Tag="3" Content="★" FontSize="32" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                        <RadioButton GroupName="NewRating" Tag="4" Content="★" FontSize="32" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                        <RadioButton GroupName="NewRating" Tag="5" Content="★" FontSize="32" Checked="RatingButton_Checked" Style="{StaticResource RatingButtonStyle}"/>
                    </StackPanel>
                    
                    <!-- Дополнительные критерии -->
                    <TextBlock Text="Дополнительно:" FontSize="14" Foreground="#666666" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <ToggleButton Content="👍 Вежливость" IsChecked="{Binding WasPolite}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                        <ToggleButton Content="✨ Чистота" IsChecked="{Binding WasClean}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                        <ToggleButton Content="🚗 Вождение" IsChecked="{Binding GoodDriving}" Style="{StaticResource RatingCriteriaToggleStyle}"/>
                    </WrapPanel>
                    
                    <Button Content="ОТПРАВИТЬ ОЦЕНКУ" Command="{Binding RateDriverCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,0,10"/>
                    <Button Content="Пропустить" Command="{Binding SkipRatingCommand}"
                            Height="35" Background="#E0DCD5"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#D0C9BF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Плавающая панель профиля (по центру экрана) -->
            <Border x:Name="ProfilePanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="700"
                    MaxHeight="600"
                    Visibility="{Binding IsProfilePanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    Panel.ZIndex="1000">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.4" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовок с кнопкой закрытия и настройками -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="20,20,0,0" 
                            Padding="25,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="60" 
                                        Height="60" 
                                        CornerRadius="30" 
                                        BorderBrush="#FFC107" 
                                        BorderThickness="3"
                                        Margin="0,0,15,0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding CurrentUser.DriverPhotoUrl, Converter={StaticResource PathToImageConverter}}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                    <Ellipse Fill="#F0F0F0" Visibility="{Binding CurrentUser.DriverPhotoUrl, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=inverse}">
                                        <Ellipse.OpacityMask>
                                            <VisualBrush>
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="👤" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Ellipse.OpacityMask>
                                    </Ellipse>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentUser.full_name}" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
                                    <TextBlock Text="{Binding CurrentUser.email}" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="⭐" Foreground="#FFC107" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding CurrentUser.rating, StringFormat=F2, FallbackValue='N/A'}" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🎁 Промокод" 
                                        Command="{Binding OpenPromoCodeCommand}"
                                        Style="{StaticResource PrimaryButton}" 
                                        Margin="0,0,10,0"
                                        Padding="15,8"
                                        FontSize="14"/>
                                <Button Content="⚙️ Настройки" 
                                        Command="{Binding OpenSettingsCommand}"
                                        Style="{StaticResource PrimaryButton}" 
                                        Margin="0,0,10,0"
                                        Padding="15,8"
                                        FontSize="14"/>
                                <Button Content="💬 Поддержка" 
                                        Command="{Binding ContactSupportCommand}"
                                        Style="{StaticResource PrimaryButton}" 
                                        Margin="0,0,10,0"
                                        Padding="15,8"
                                        FontSize="14"/>
                                <Button Content="✕" 
                                        Click="CloseProfilePanel_Click"
                                        Width="35" 
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#666"
                                        FontSize="18"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F0F0F0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- История поездок -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Margin="25,20,25,25" 
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                        <StackPanel>
                            <TextBlock Text="ИСТОРИЯ ПОЕЗДОК" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,15"/>
                            <ListBox ItemsSource="{Binding PastTrips}" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     HorizontalContentAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                CornerRadius="10" 
                                                Padding="20" 
                                                Margin="0,0,0,15" 
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" FontWeight="Bold" FontSize="16" Foreground="#333333">
                                                        <Run Text="Поездка #"/><Run Text="{Binding order_id}"/>
                                                    </TextBlock>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding TotalPrice, StringFormat={}{0:C}, ConverterCulture=ru-RU}" 
                                                               FontSize="22" 
                                                               FontWeight="Bold" 
                                                               Foreground="#FF9800" 
                                                               VerticalAlignment="Center"/>
                                                </Grid>

                                                <StackPanel Grid.Row="1" Margin="0,10,0,10">
                                                    <TextBlock TextTrimming="CharacterEllipsis" Foreground="#333333">
                                                        <Run Text="От:" FontWeight="SemiBold"/><Run Text="{Binding PointA}"/>
                                                    </TextBlock>
                                                    <TextBlock TextTrimming="CharacterEllipsis" Foreground="#333333" Margin="0,5,0,0">
                                                        <Run Text="До:" FontWeight="SemiBold"/><Run Text="{Binding PointB}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <TextBlock Grid.Row="2" Foreground="#666666" FontSize="13">
                                                    <Run Text="Водитель:"/><Run Text="{Binding AssignedDriver.full_name, FallbackValue='-'}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Плавающая панель настроек (по центру экрана) -->
            <Border x:Name="SettingsPanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="600"
                    MaxHeight="700"
                    Visibility="{Binding IsSettingsPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    Panel.ZIndex="1001">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.4" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовок с кнопкой закрытия -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="20,20,0,0" 
                            Padding="25,20">
                        <Grid>
                            <TextBlock Text="⚙️ Настройки" FontSize="24" FontWeight="Bold" Foreground="#333333" VerticalAlignment="Center"/>
                            <Button Content="✕" 
                                    Click="CloseSettingsPanel_Click"
                                    Width="35" 
                                    Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#666"
                                    FontSize="18"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Содержимое настроек -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Margin="25,20,25,25" 
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                        <StackPanel>
                            <!-- Смена пароля -->
                            <TextBlock Text="Смена пароля" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                            <TextBlock Text="Текущий пароль:" Style="{StaticResource InputLabel}" Foreground="#333"/>
                            <PasswordBox x:Name="CurrentPasswordBox" Style="{StaticResource PasswordField}" Margin="0,5,0,15"/>
                            <TextBlock Text="Новый пароль:" Style="{StaticResource InputLabel}" Foreground="#333"/>
                            <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource PasswordField}" Margin="0,5,0,15"/>
                            <TextBlock Text="Подтвердите пароль:" Style="{StaticResource InputLabel}" Foreground="#333"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordField}" Margin="0,5,0,20"/>
                            <Button Content="ИЗМЕНИТЬ ПАРОЛЬ" 
                                    Click="ChangePasswordButton_Click"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,0,30"/>

                            <!-- Смена аватарки -->
                            <TextBlock Text="Аватарка" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                            <Border Width="120" Height="120" CornerRadius="60" BorderBrush="#E0E0E0" BorderThickness="2" Margin="0,0,0,15" HorizontalAlignment="Left">
                                <Image x:Name="AvatarImage" 
                                       Source="{Binding CurrentUser.DriverPhotoUrl, Converter={StaticResource PathToImageConverter}}" 
                                       Stretch="UniformToFill"
                                       ClipToBounds="True">
                                    <Image.Clip>
                                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60"/>
                                    </Image.Clip>
                                </Image>
                            </Border>
                            <Button Content="ВЫБРАТЬ АВАТАРКУ" 
                                    Click="SelectAvatarButton_Click"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,0,30"
                                    HorizontalAlignment="Left"/>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Плавающая панель промокода (по центру экрана) -->
            <Border x:Name="PromoCodePanel"
                    Background="#FFFFFF" 
                    Opacity="0.95"
                    CornerRadius="20" 
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="450"
                    Visibility="{Binding IsPromoCodePanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    Panel.ZIndex="1002">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.4" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="🎁 Активировать промокод" FontSize="20" FontWeight="Bold" Foreground="#333333" VerticalAlignment="Center"/>
                        <Button Content="✕" 
                                Command="{Binding ClosePromoCodePanelCommand}"
                                Width="30" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#666"
                                FontSize="16"
                                Cursor="Hand"
                                HorizontalAlignment="Right">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <TextBlock Text="Введите промокод:" Style="{StaticResource InputLabel}" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding PromoCodeInput, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputField}" 
                             Margin="0,0,0,15"/>
                    
                    <!-- Сообщение о статусе промокода -->
                    <Border Background="{Binding PromoCodeStatusBackground}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15"
                            Visibility="{Binding PromoCodeStatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding PromoCodeStatusMessage}" 
                                   FontSize="14" 
                                   Foreground="{Binding PromoCodeStatusForeground}" 
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Информация об активном промокоде -->
                    <Border Background="#E8F5E9" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15"
                            Visibility="{Binding HasActivePromoCode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="✅ Активный промокод:" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,5"/>
                            <TextBlock Text="Скидка 15% на тарифы Комфорт и Бизнес" Foreground="#388E3C"/>
                            <TextBlock Foreground="#388E3C" Margin="0,5,0,0">
                                <Run Text="Осталось поездок: "/>
                                <Run Text="{Binding PromoCodeRidesLeft}" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="АКТИВИРОВАТЬ" 
                            Command="{Binding ActivatePromoCodeCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Border>

            <!-- Рекламный баннер справа при поиске водителя -->
            <Border x:Name="AdBanner"
                    Background="#FFFFFF" 
                    CornerRadius="15" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    MaxWidth="200"
                    Margin="0,60,20,60"
                    Padding="5"
                    Visibility="{Binding IsSearchingState, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <Image x:Name="BannerImage" Stretch="Uniform" VerticalAlignment="Center"/>
            </Border>

            <!-- Анимация загрузки поверх всего контента (должна быть последней в Grid) -->
            <Border x:Name="LoadingVideoContainer"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="#F0EEE9"
                    Visibility="Visible"
                    Panel.ZIndex="9999">
                <MediaElement x:Name="LoadingVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              Stretch="Uniform"
                              MediaEnded="LoadingVideo_MediaEnded"
                              MediaFailed="LoadingVideo_MediaFailed"/>
            </Border>
        </Grid>
    </Border>
</Window>